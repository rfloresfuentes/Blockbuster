<div id="<%= dom_id client %>">
  <tr>
    <th scope="row"><%= client.id %></th>
    <td><%= client.name %></td>
    <td><%= client.age %></td>
    <td><%= client.movies.last %></td>
    <td><%= link_to "Mostrar a este cliente", client %></td>
    <td><%= link_to "Editar a este cliente", edit_client_path(client) %></td>
    <td><%= button_to "Eliminar a este cliente", @client, method: :delete %></td>
  </tr>
</div>
